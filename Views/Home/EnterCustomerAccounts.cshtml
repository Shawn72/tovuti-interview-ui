@model TovutiUI.Models.DropdownListModel

@{
    ViewData["Title"] = "EnterCustomerAccounts";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="content container-fluid">  
    <div class="portlet light portlet-fit portlet-datatable bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-settings font-green"></i>
                <span class="caption-subject font-green sbold uppercase">REGISTER CUSTOMER PAGE</span>
            </div>
        </div>
        <br />
     
        <div class="portlet-body">
            <div class="form-body">  
                <div class="table-container"> 
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <form class="form_enter_customer_account">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                            <div class="form-group">
                                <label>Customer</label>
                                 <select id="ddlCustomer" class="form-control customerDropdown select2"  name="customer_id" asp-items="Model.List_Customers">
                                    <option value="0" disabled="disabled" > --- select customer --- </option>                                          
                                </select>
                            </div>

                             <div class="form-group">
                                <label>Account Number</label>
                                <input class="form-control floating" type="text" name ="account_number" placeholder="enter account number" />
                            </div>

                             <div class="form-group">
                                <label>Email</label>
                                <input class="form-control floating" type="text" name ="email" placeholder="enter customer valid email" />
                            </div>

                             <div class="form-group">
                                <label>Account Balance</label>
                                <input class="form-control floating numericsonly" type="number" name ="account_balance" placeholder="enter account balance" />
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Add Account" class="btn btn-primary btnAddCstAccount" />
                            </div>
                        </form>
                    </div>
                    <div class="col-md-2"></div>
                </div>
            </div>
         </div>
    </div>
</section>


